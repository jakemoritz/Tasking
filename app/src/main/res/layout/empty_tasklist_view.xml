<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/empty_tasklist">

    <ImageView
        android:layout_width="250dp" android:layout_height="250dp"
        android:id="@+id/empty_tasklist_image"
        android:src="@drawable/empty_tasklist"
        android:adjustViewBounds="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_listview_message"
        android:layout_below="@+id/empty_tasklist_image"
        android:layout_centerHorizontal="true"
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:textAlignment="center"
        android:layout_marginTop="30dp" />

</RelativeLayout>


